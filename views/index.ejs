<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Url Hasher</title>
</head>
<body>
  <div class="container">
    <h1>Url Hashing</h1>
    <form action="/tiny" method="POST" class="my-4 form-inline">
      <label for="text" class="sr-only">Url</label>
      <input required placeholder="Url" type="url" name="text" id="text" class="form-control col mr-2">
      <button class="btn btn-success" type="submit">Hash</button>
    </form>
    
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>URL</th>
          <th>Hashed URL</th>
          <th>Click Count</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td style="width:40%"><a href="<%= shortUrl.url %>"><%= shortUrl.url %></a></td>
            <td style="width:40%"><a href="/t/<%= shortUrl.hash %>"><%= fullHashedUrl %>t/<%=shortUrl.hash%></a></td>
            <td style="width:20%"><%= shortUrl.clickCounter %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>